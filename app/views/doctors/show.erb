<h1>Doctor: <%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<% @doctor.appointments.each do |app| %>
  <p><%= app.appointment_datetime.strftime(" %B %y %Y") %> at <%= app.appointment_datetime.strftime(" %H:%M ") %> with <%= link_to app.patient.name, patient_path(app.patient)  %> </p>
<% end %>
