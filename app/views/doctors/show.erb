<h1><%= @doctor.name %> info page:</h1>

<h3>Appointments: </h3>
<ul>
  <% @doctor.appointments.each do |appt| %>
  <li><%= appt.appointment_datetime.to_time.strftime("%B %d, %Y at %M:%M") %></li>
  <% end %>
</ul>

<h3>Patients: </h3>
<ul>
  <% @doctor.patients.each do |patient| %>
  <li><%= link_to(patient.name, patient_path(patient)) %></li>
  <% end %>
</ul>
